@page
@model ChatLake.Web.Pages.Analysis.TopicsModel
@{
    ViewData["Title"] = "Topics";
}

<div class="row mb-4">
    <div class="col">
        <h2>Topics</h2>
        <p class="text-muted">Topics extracted from your conversations using LDA</p>
    </div>
    <div class="col-auto">
        <a asp-page="/Analysis/Index" class="btn btn-outline-secondary">Back to Analysis</a>
    </div>
</div>

@if (Model.Topics.Any())
{
    <div class="row g-4">
        @foreach (var topic in Model.Topics)
        {
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <strong>@topic.Label</strong>
                        <span class="badge bg-primary">@topic.ConversationCount conversations</span>
                    </div>
                    <div class="card-body">
                        @if (topic.Keywords.Any())
                        {
                            <div class="mb-2">
                                @foreach (var keyword in topic.Keywords)
                                {
                                    <span class="badge bg-light text-dark me-1 mb-1">@keyword</span>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-page="/Analysis/TopicDetail" asp-route-id="@topic.TopicId" class="btn btn-sm btn-outline-primary">
                            View Conversations
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p class="mb-2">No topics have been extracted yet.</p>
        <a asp-page="/Analysis/Index" class="btn btn-primary">Run Topic Extraction</a>
    </div>
}
