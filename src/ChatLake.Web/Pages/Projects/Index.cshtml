@page
@model ChatLake.Web.Pages.Projects.IndexModel

<h2>Projects</h2>

<p>
    <a asp-page="/Import">Import Data</a> |
    <a asp-page="/Projects/Suggestions">Project Suggestions</a>
</p>

@if (!Model.Projects.Any())
{
    <p><em>No projects yet.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Key</th>
                <th>Conversations</th>
                <th>Status</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var project in Model.Projects)
        {
            <tr>
                <td><a asp-page="/Projects/Detail" asp-route-id="@project.ProjectId">@project.Name</a></td>
                <td><code>@project.ProjectKey</code></td>
                <td>@project.ConversationCount</td>
                <td>@(project.IsActive ? "Active" : "Archived")</td>
                <td>@project.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
        </tbody>
    </table>
}
